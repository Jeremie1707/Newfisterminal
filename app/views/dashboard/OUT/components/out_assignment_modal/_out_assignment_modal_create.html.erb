    <% @out_assignment.errors.full_messages.each do |message| %>
      <li class="invalid-message"><%= message %></li>
    <% end %>
  <% end %>
  <div class="form-inline col-md-12">
    <%= form.input :order_index, as: :string, label: false, placeholder: "Position" %>
