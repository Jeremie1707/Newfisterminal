<%= simple_form_for [@load_in], :remote => true  do |f| %>
<% if current_user.admin == true %>
  <%= f.association :t1_customer, label: "Select customer",collection: T1Customer.where.not("id = ?", current_user.t1_customer_id) %>
<% else %>
  <%= f.hidden_field :t1_customer, value: current_user.t1_customer_id%>
<% end %>
<%= f.input :status, label: "Status", as: :radio_buttons, collection: ["IN", "OUT"], wrapper: :vertical_collection_inline%>
<%= f.input :type_of_service, label: false, placeholder: "Type of service", as: :radio_buttons,  collection: ["TRUCK TO TRUCK", "TRUCK TERMINAL TRUCK", "PICKING"], wrapper: :vertical_collection_inline %>
<%= f.input :arrival_date, as: :string, input_html: {class: 'datepicker'}, label: false, placeholder: "arrival date?" %>
<%= f.input :note, label: false,as: :text, placeholder: "add a note"%>

<div class="d-flex justify-content-between">
  <div class="mr-1">
    <%= f.input :truck_nr, label: false, placeholder: "Truck_nr"%>
  </div>
  <div>
    <%= f.input :trailer_nr, label: false, placeholder: "Trailer_nr"%>
  </div>
</div>



<label class="form-group string required" for="load_in_in_assignments_attributes_packer" id="packers-list" data-packers="<%= @packers.to_json %>" ></label>
<input class="form-control" label ="false" type="text" placeholder="Packer number" id="packer-form" name="load_in[in_assignments_attributes][][packer]" >
 <% if @load_in.errors["in_assignments.packer"].present? %>
  <div class="invalid-message"><%="#{@load_in.errors["in_assignments.packer"][0]}"%></div>
  <% end %>
<label class="string required" for="load_in_in_assignments_attributes_lot_nr"></label>
<input class="form-control" label = "false" type="text" placeholder="Lot number" name="load_in[in_assignments_attributes][][lot_nr]" value = "<%= @load_in.in_assignments.first.lot_nr%>" >
<% if @load_in.errors["in_assignments.lot_nr"].present? %>
  <div class="invalid-message"><%="#{@load_in.errors["in_assignments.lot_nr"][0]}"%></div>
  <% end %>
<label class="form-group string required" for="load_in_in_assignments_attributes_incoming_order_ref"></label>
<input class="form-control" label = "false" type="text" placeholder="Order Ref." name="load_in[in_assignments_attributes][][incoming_order_ref]" value = "<%= @load_in.in_assignments.first.incoming_order_ref%>">
<% if @load_in.errors["in_assignments.incoming_order_ref"].present? %>
  <div class="invalid-message"><%="#{@load_in.errors["in_assignments.incoming_order_ref"][0]}"%></div>
  <% end %>
<label class=" form-group string required" for="load_in_in_assignments_attributes_other_ref"></label>


<%= f.button :submit, "Add", class: 'btn btn-success w-100'%>
 <%#= f.submit "Search", class: "btn btn-primary" %>

<% end %>

