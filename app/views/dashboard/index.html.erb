                <th>Departure Time</th>
                <th>Truck</th>
                <th>Trailer</th>
        </tr>
      </thead>
      <tbody id='loadin-list'>
          <%= render 'dashboard/components/load_ins_rows' %>
    </tbody>
    </table>
    <div id="loadin-nav" class="nav">
      <%= render 'dashboard/components/nav_pagination' %>
