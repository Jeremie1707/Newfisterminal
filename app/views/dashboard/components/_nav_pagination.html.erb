<div>
  <p><%= "There is a total of #{@total_load_ins} Load In" %></p>
</div>
<div>
  <button class="btn btn-outline-secondary"><%= link_to 'First', set_page_path(page: 1), method: :patch, remote: true %>
  </button>
  <button class="actual-page-number btn btn-outline-secondary"><%= link_to "#{@page} /#{@total_pages}", set_page_path(page: 1) %>
  </button>
  <% if @page <= 1 %>
  <%=''%>
  <% else %>
  <button class="btn btn-outline-secondary"><%= link_to 'Previous', set_page_path(page: @page - 1), method: :patch, remote: true %>
  </button>
  <% end %>
  <% if @page == @total_pages %>
  <%=''%>
  <% else %>
  <button class="btn btn-outline-secondary"><%= link_to 'Next', set_page_path(page: @page + 1), method: :patch, remote: true %>
  </button>
  <% end %>
  <button class="btn btn-outline-secondary"><%= link_to 'Last', set_page_path(page: @total_pages), method: :patch, remote: true %>
  </button>
</div>


