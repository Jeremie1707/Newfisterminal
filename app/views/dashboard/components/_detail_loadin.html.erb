
<div class="modal fade" id="my-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"></h5>
        <div id="LoadIn-delete-button">
          <%= button_to 'delete Load In', load_in_path(id: @load_in), method: :delete, data: {confirm: "Are you sure you want to delete this Load In?"}, class:'btn btn-outline-danger'%>
        </div>
        <div id="LoadIn-update-button">
          <%= button_to 'Update Load In', edit_load_in_path(id: @load_in),method: :get, remote: true, class:'btn btn-outline-success ml-2'%>
        </div>

          <button id="btnPrint" type="button" class="btn btn-outline-primary ml-2">Print</button>

          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="printModal" >
          <div class="row">
            <div class="col-md-4 modal-detail loadin-company" ><h6>Company name:</h6>
              <%= content_tag :div, class: 'divLoadinCompany', id: dom_id(@load_in) do %>
              <p><%=@load_in.t1_customer.name%></p></div>
              <% end%>
            <div class="col-md-4 modal-detail loadin-arrival"><h6>Arrival date:</h6><p><%=@load_in.arrival_date.strftime("%d/%m/%Y %H:%M")%></p></div>
            <div class="col-md-4 modal-detail status"><h6>Status:</h6><p><%=@load_in.status%></p></div>
          </div>
          <div class="row">
            <div class="col-md-2 modal-detail reference"><h6>Reference:</h6><p><%=@load_in.reference%></p></div>
            <div class="col-md-2 modal-detail truck"><h6>Truck Number:</h6><p><%=@load_in.truck_nr%></p></div>
          </div>
          <div class="row">
            <div class="col-md-2 modal-detail trailer"><h6>Trailer Number:</h6><p><%=@load_in.trailer_nr%></p></div>
          </div>

          <div>
            <%=link_to '<i class="far fa-plus-square mr-1"></i>Add an Assignment'.html_safe, create_modal_in_assignment_path(load_in: @load_in), method: :post, remote: true %>
          </div>


          <table class="table table-bordered modal-in-assignment">
            <thead>
              <tr>
                <th>Ref</th>
                <th>Packer</th>
                <th>Lot</th>
                <th>Incoming Order</th>
                <th>Boxes</th>
                <th>Pallet</th>
              </tr>
            </thead>
            <tbody class="modal-in-assignment-list">
              <%= render 'dashboard/components/in_assignment_modal/detail_loadin_in_assignment_rows' %>
            </tbody>
          </table>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

